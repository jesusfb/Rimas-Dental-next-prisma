{
	"css.validate": true,
	"eslint.enable": true,
	"eslint.workingDirectories": [{ "mode": "auto" }],
	"files.associations": {
		"*css": "tailwindcss"
	},
	"files.autoSave": "off",

	"[jsonc]": {
		"editor.defaultFormatter": "biomejs.biome"
	},
	"[typescript]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	},
	"[typescriptreact]": {
		"editor.defaultFormatter": "esbenp.prettier-vscode"
	}
}

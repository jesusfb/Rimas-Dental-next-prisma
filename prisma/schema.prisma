generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum Gender {
  male
  female
}

enum doctorsRole {
  admin
  doctor
  visitor
}

model Doctors {
  id                String      @id @map("_id")
  email             String      @unique
  name              String
  phone             String?     @unique
  specialization    String
  bio               String?
  profileImage      String?
  yearsOfExperience Int
  gender            Gender
  role              doctorsRole
  isPending         Boolean     @default(false)

  createdAt DateTime   @default(now())
  updatedAt DateTime   @updatedAt
  Services  Services[]
}

model Patient {
  id          String    @id @map("_id")
  name        String
  email       String    @unique
  phone1      String
  phone2      String?
  dateOfBirth DateTime?
  gender      Gender
  address     String?
  reference   String?

  treatmentNotes      Json[]
  appointmentHistory  Json[]
  majorDisease        String[]
  regularBrushingTime Int      @default(1)
  brushingMaterials   String
  sweetEatingLevel    String
  examination         String

  radiologicalInvestigation String?
  laboratoryInvestigation   String?
  treatmentPlan             String?
  treatmentNote             String?
  drugHistory               String?
  treatmentDetails          PatientSchedule[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model PatientSchedule {
  id               String   @id @map("_id")
  date             DateTime
  treatmentNote    String
  paidToday        Int
  balanceRemaining Int
  next_Rx_plan     String?

  clientsId String?
  Clients   Patient? @relation(fields: [clientsId], references: [id])
}

model Services {
  id          String @id @map("_id")
  name        String
  description String
  content     String
  coverImage  String

  icons       String?
  YT_VideoUrl String?
  price_range String?
  tags        String[]
  isPaused    Boolean? @default(false)

  doctorsId String
  Author    Doctors @relation(fields: [doctorsId], references: [id])

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Expense {
  id          String   @id @map("_id")
  amount      Float
  date        DateTime
  description String?
  category    String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}
